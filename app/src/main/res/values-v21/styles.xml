<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- inherit from the material theme 使用Material desgin -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar 导航栏颜色 -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars  顶部颜色-->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields  -->
        <item name="android:colorAccent">@color/accent</item>
        <!--虚拟按键背景颜色 -->
        <!--<item name="android:navigationBarColor">@color/blue_light</item>-->
        <!--页面背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>