<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/DIMEN_18PX"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cmddialog_text_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/DIMEN_8PX"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cmddialog_text_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/DIMEN_8PX"
        android:text="Content"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cmddialog_btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:background="@null"
            android:padding="8dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cmddialog_btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:background="@null"
            android:padding="8dp"
            android:text="确定"
            android:textColor="@color/blue_dark"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>